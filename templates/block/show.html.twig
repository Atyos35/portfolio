            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_block_index') }}">back to list</a>

    <a href="{{ path('app_block_edit', {'id': block.id}) }}">edit</a>

    {{ include('block/_delete_form.html.twig') }}
