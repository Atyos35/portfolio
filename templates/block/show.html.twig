{% block title %}Block{% endblock %}

{% block body %}
    <h1>Block</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ block.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ block.title }}</td>
            </tr>
            <tr>
                <th>Names</th>
