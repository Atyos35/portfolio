{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ training.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ training.startDate ? training.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ training.endDate ? training.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ training.school }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_training_index') }}">back to list</a>

    <a href="{{ path('app_training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
