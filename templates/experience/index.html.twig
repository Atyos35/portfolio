{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Company</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.name }}</td>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ experience.endDate ? experience.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ experience.description }}</td>
                <td>{{ experience.duration ? experience.duration.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.city }}</td>
                <td>
                    <a href="{{ path('app_experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('app_experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_experience_new') }}">Create new</a>
{% endblock %}
